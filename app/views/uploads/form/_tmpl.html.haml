#tmpl_poi_note_input{style: 'display: none;'}
  %input{type: 'radio', name: 'upload_type', value: 'camera', checked: true, onclick: 'toggleUploadType(this)'}
    #{t('uploads.select_camera').html_safe} 
  %input{type: 'radio', name: 'upload_type', value: 'file', onclick: 'toggleUploadType(this)'}
    #{t('uploads.select_file').html_safe}
  .messages
    %div{tmpl: {id: :upload_error}}
    %div{tmpl: {id: :upload_message}}
    %div{tmpl: {id: :upload_progress}}
  %div{tmpl: {id: :upload_form_ui}}
    .field
      %span{style: 'float: left; padding-right: 20px;'}
        #{t('uploads.comment')}
      = text_area_tag 'upload_comment[text]', '', tmpl: {id: 'upload_comment'}
    %div{tmpl: {id: :upload_cam_container}}
      = render partial: '/uploads/form/tmpl_camera_data', locals: {poi_note: poi_note}
    %div{tmpl: {id: :upload_file_container}}
      = form_for poi_note, remote: true, :html => { class: nil, multipart: true, tmpl: {id: 'upload_form'}, target: 'upload_target' } do |f|
        = render partial: '/uploads/form/tmpl_file_data', locals: {poi_note: poi_note, f: f}
        = hidden_field_tag 'location[latitude]'
        = hidden_field_tag 'location[longitude]'

