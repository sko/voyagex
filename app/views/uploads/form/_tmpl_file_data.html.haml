%div{tmpl: {id: :upload_file_controls}, style: 'display: none;'}
  = hidden_field_tag 'upload_comment[text]', '', tmpl: {id: 'upload_comment_text'}
  %span{style: 'float: left;'}
    = f.file_field 'file', tmpl: {id: 'fileupload'}
  %button.show-page-loading-msg{tmpl: {id: 'upload_button'}, data: {type: 'json', theme: 'a', textonly: 'false', textvisible: 'true', msgtext: 'Loading'}}
    #{t('uploads.upload').html_safe}
