#sign_up_modal{data: {role: 'popup', 'overlay-theme' => 'a', theme: 'a'}}
  %div{data: {role: 'header'}}
    %h4.ui-title Create an account
  %div{role: 'main'}
    = form_for(resource, as: resource_name, url: registration_path(resource_name), :remote => true, :format => :js, :html => {:class => "form-signup"}) do |f|
      = f.email_field :email, id: 'auth_email', :autofocus => true, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Email"
      = f.password_field :password, id: 'auth_password', :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Password"
      = f.password_field :password_confirmation, id: 'auth_password_confirmation', :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Confirm password"
      %a{ :href => "#", :class => "btn btn-sm", data: { role: 'button', rel: 'back' } } Cancel
      = f.submit "Sign Up", :class => "btn btn-sm"
