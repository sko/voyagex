#tmpl_location_bookmarks{style: 'display: none;'}
  %tbody.bookmark-container{data: {id: '{location_id}', lat: '{lat}', lng: '{lng}'}}
    %tr
      %td{colspan: 3}
        = link_to '{location}', '#', onclick: "javascript:APP.loadLocation({last_location_id});"
    %tr
      %td{style: 'text-align: center;'}
        {location_poi_or_no_poi}
      %td{style: 'text-align: center;'}
        {bookmark_updated_at}
      %td{style: 'text-align: center;'}
        {commented_by_user}

#tmpl_location_bookmarks_poi{style: 'display: none;'}
  = link_to image_tag('attachment_url', style: 'max-width: 300px; max-height: 100px;'), '#', onclick: "javascript:APP.loadLocation({location_id});"

#tmpl_location_bookmarks_no_poi{style: 'display: none;'}
  kein POI
