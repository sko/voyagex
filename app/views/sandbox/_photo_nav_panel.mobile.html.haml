#photo_nav_panel{data: {role: 'panel', dismissible: 'false', animate: 'true', display: 'overlay'}}
  %div{style: 'float: right; z-index: 9999; position: absolute; top: 5px; right: 5px; padding: 0px 0px 0px 10px;'}
    %span.ui-icon.ui-icon-circle-close{onclick: '$("#photo_nav_panel").panel("close");'}
  #photo_nav_tabs
    -#{data: {role: 'tabs'}, style: 'margin-top: 20px;'}
    -#%div
      -#{data: {role: 'navbar'}}
    %ul
      %li{style: 'width: 45px; height: 37px;'}
        = link_to '', '#pois_preview', style: 'width: 35px; height: 35px; margin: 0px; padding: 0px 5px 0px 5px;', data: {role: 'button', icon: 'location'}, id: 'pois_preview_btn'
      %li{style: 'width: 45px; height: 37px;'}
        = link_to '', '#location_bookmarks', style: 'width: 35px; height: 35px; margin: 0px; padding: 0px 5px 0px 5px;', data: {role: 'button', icon: 'eye'}, id: 'location_bookmarks_btn'
      %li{style: 'width: 45px; height: 37px;'}
        = link_to '', '#people_of_interest', style: 'width: 35px; height: 35px; margin: 0px; padding: 0px 5px 0px 5px;', data: {role: 'button', icon: 'user'}, id: 'people_of_interest_btn'
    #pois_preview
      -#= render partial: 'pois_preview'
    #location_bookmarks
      = render partial: 'location_bookmarks'
    #people_of_interest
      = render partial: 'people_of_interest'
  -#.ui-button.ui-widget.ui-state-default.ui-corner-all.ui-button-text-only{onclick: '$("#photo_nav_panel").panel("close");'}
  -#  .ui-button-text
  -#    Close Panel

#tmpl_swiper_slide{style: 'display: none;'}
  -#, address: '{address}'
  %span.swiper-slide{data: {poiId: '{poiId}', poiNoteId: '{poiNoteId}'}, style: 'width: {width}px;'}
    %img{tmpl: {src: '{attachment_url}'}, style: "width: {width}px; height: {height}px;"}

- max_height = 100.0
- max_width = 300
- swiper_style = "width: #{max_width}px; height: #{max_height.to_i}px;"
= javascript_tag do
  $("head").append("<style type='text/css'>.swiper-container { #{swiper_style} }</style>");
