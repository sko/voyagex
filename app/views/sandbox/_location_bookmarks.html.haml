  -# locations = user.locations.order('updated_at desc')
  - locations = user.locations_users.joins(:location).order('updated_at desc')
  - locations.each do |locations_user|
    - location = locations_user.location
    %tbody.bookmark-container{data: {id: location.id, lat: location.latitude, lng: location.longitude}}
      %tr
        %td{colspan: 3}
          -#= link_to shorten_address(location), location_path(location_id: location.id), data: { remote: 'true', format: :js }
          = link_to shorten_address(location), '#', onclick: "javascript:APP.loadLocation({id: #{location.id}});"
      %tr
        %td{style: 'text-align: center;'}
          - current_user_note = nil
          - if location.poi.present?
            / there should only be 1 poi per location, a poi always has an upload
            - poi_notes = location.poi.notes
            - current_user_note = poi_notes.find{|p_n|p_n.user_id == user.id}
            - if current_user_note.present?
              = link_to image_tag(current_user_note.attachment.present? ? current_user_note.attachment.file.url : '/assets/noise.gif'.html_safe, style: 'max-width: 300px; max-height: 100px;'), '#', onclick: "javascript:APP.loadLocation({id: #{location.id}});"
            - else
              = link_to image_tag(poi_notes[0].attachment.present? ? poi_notes[0].attachment.file.url : '/assets/noise.gif'.html_safe, style: 'max-width: 300px; max-height: 100px;'), '#', onclick: "javascript:APP.loadLocation({id: #{location.id}});"
          - else
            kein POI
        %td{style: 'text-align: center;'}
          -#= locations_user.updated_at.strftime("%Y%m%d%H%M%S")
          = locations_user.updated_at.strftime("%d.%m.%Y %H:%M")
        %td{style: 'text-align: center;'}
          = current_user_note.present?.to_s
