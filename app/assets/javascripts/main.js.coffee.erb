  _init: (mapOptions, offlineZooms, tileHandler = null) ->
    APP._initState += 1
    switch APP._initState
      when 1
        Main._BACKEND = new VoyageX.Backend()
        Main._STORAGE_CONTROLLER = new Comm.StorageController(initLocation, (initError) ->
            console.log 'StorageController initialized FileSystem with message: '+(if initError then 'FAILED' else 'OK')
            APP._init mapOptions, offlineZooms, tileHandler
          )
      when 2
        curU = APP.user()
        if APP.signedIn curU
          channelEncKey = curU.peerPort.channel_enc_key
          sysChannelEncKey = curU.peerPort.sys_channel_enc_key
          # don't overwrite last location when reloading from app-cache ...
          Main._STORAGE_CONTROLLER.env (env) ->
            unless env.volatileFlags.userInitialized?
              if curU.lastLocationId != initLocation.id
                env.volatileFlags.userInitialized = { lastLocation: true }
                console.log 'APP - _init: resetting users last location ...'
                Main._STORAGE_CONTROLLER.saveUser {id: curU.id, lastLocationId: initLocation.id}
          #curU = APP.user()
          mapOptions.center = new L.LatLng(curU.lastLocation().lat, curU.lastLocation().lng)
        else
          channelEncKey = null
          sysChannelEncKey = null
          mapOptions.center = new L.LatLng(initLocation.lat, initLocation.lng)
        # Communication initialisation (Faye-Client)
        APP._comm = new Comm.Comm(APP.userId(),
                                  [['/talk', APP._talkCB, channelEncKey],
                                   ['/map_events', APP._view._mapEventsCB, channelEncKey],
                                   ['/pois', APP._poisCB, channelEncKey],
                                   ['/radar', APP._view._radarCB, channelEncKey]],
                                   sysChannelEncKey,
                                   APP._systemCB,
                                   Main._BACKEND.commConnStateCB)
        unless forceOffline
          Main._BACKEND.pingBackend()
        APP._cacheStrategy = new VoyageX.CacheStrategy true
        # Map initialisation (LeafletJS)
