  @_syncWithStorage: (msg, callback, note, i) ->
    # store image
    attachmentUrl = Model._viewPoiNoteAttachment note
    # @see leaflet-funbctionaltilelayer _loadTile: function / MapControl - drawTile
    if (typeof attachmentUrl == 'string') 
      console.log '_syncWithStorage - attachmentUrl-string = '+attachmentUrl
      #if i == (msg.poi.notes.length - 1)
      unless msg.poi.notes? &&  i != (msg.poi.notes.length - 1)
        existingPoiData = Comm.StorageController.instance().get Comm.StorageController.poiKey(msg.poi)
        if existingPoiData?
          unless Model._findPoiNote note, existingPoiData.notes
            Model._storeWithoutPoi Comm.StorageController.poiKey(msg.poi), note
        else
          Model._storeWithoutPoi Comm.StorageController.poiKey(msg.poi), note
        unless msg.poi.notes?
          msg.poi.notes = [note]
        callback msg.poi
    else if (typeof attachmentUrl.then == 'function') 
      # Assume we are dealing with a promise.
      attachmentUrl.then (url) ->
          console.log '_syncWithStorage - attachmentUrl-promise resolved to: '+url
          note.attachment.url = url
          #if i == (msg.poi.notes.length - 1)
          unless msg.poi.notes? &&  i != (msg.poi.notes.length - 1)
            existingPoiData = Comm.StorageController.instance().get Comm.StorageController.poiKey(msg.poi)
            if existingPoiData?
              unless Model._findPoiNote note, existingPoiData.notes
                Model._storeWithoutPoi Comm.StorageController.poiKey(msg.poi), note
            else
              Model._storeWithoutPoi Comm.StorageController.poiKey(msg.poi), note
            unless msg.poi.notes?
              msg.poi.notes = [note]
            callback msg.poi
  
  @_storeWithoutPoi: (poiKey, note) ->
    if note.poi?
      notePoi = note.poi
      delete note.poi
      poiNoteClone = eval("("+JSON.stringify(note)+")")
      Comm.StorageController.instance().addToList poiKey, 'notes', poiNoteClone
      note.poi = notePoi
    else
      Comm.StorageController.instance().addToList poiKey, 'notes', note
  
  @_findPoiNote: (note, notes) ->
    for n in notes
      if n.id == note.id
        return true
    false

